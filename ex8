#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>
#define X 10
int main(void) {
	
	int num;
	int i;
	int fat = 1;

	printf("Digite um numero: ");
	scanf(" %d", &num);
	
	for(i = 1; i <= num; i++){
		fat *= i;
	}
	
	printf("O fatorial de %d e: %d", num, fat);
    return 0;
}
